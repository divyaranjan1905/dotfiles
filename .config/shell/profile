## PATH
if [ -d "$HOME/.bin" ] ;
then PATH="$HOME/.bin:$PATH"
fi

if [ -d "/root/.local/bin" ];
then PATH="/root/.local/bin:$PATH"
fi

if [ -d "$HOME/.local/bin" ] ;
then PATH="$HOME/.local/bin:$PATH"
fi

if [ -d "$HOME/.cabal/bin" ];
then PATH="$HOME/.cabal/bin:$PATH"
fi

if [ -d "$HOME/Applications" ] ;
then PATH="$HOME/Applications:$PATH"
fi

if [ -d "/home/divya/.ghcup/bin" ] ;
then PATH="/home/divya/.ghcup/bin:$PATH"
fi

if [ -d "/home/divya/.cargo/bin" ] ;
then PATH="/home/divya/.cargo/bin:$PATH"
fi

